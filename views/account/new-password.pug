extends ../layout/main-layout.pug

block content
  .container
    .row.justify-content-center
      .col-md-6
        // Error message
        if errorMessage
          div.alert.alert-danger.text-center= errorMessage
        
        // Password reset form
        form(action="/account/new-password" method="POST")
          input(type="hidden" name="_csrf" value=csrfToken)
          input(type="hidden" name="userId" value=userId)
          input(type="hidden" name="passwordToken" value=passwordToken)

          .card
            .card-body
              h4.card-title.text-center Set New Password

              .form-group
                label(for="password") New Password
                input.form-control#password(type="password" name="password" placeholder="Enter your new password" required)

              .form-group.text-center
                input(type="submit" value="Submit").btn.btn-primary.btn-block

            .card-footer.text-center
              a(href="/account/login" class="btn btn-link p-0") Back to Login
