#mySlider.carousel.slide(data-bs-ride="carousel")
    .carousel-indicators
      button(type="button" data-bs-target="#mySlider" data-bs-slide-to="0" class="active" aria-current="true")
      button(type="button" data-bs-target="#mySlider" data-bs-slide-to="1")
      button(type="button" data-bs-target="#mySlider" data-bs-slide-to="2")
    .carousel-inner
      .carousel-item.active
        img.d-block.w-100(src="/img/sliders.webp" alt="Slide 1")
      .carousel-item
        img.d-block.w-100(src="/img/sliders2.webp" alt="Slide 2")
      .carousel-item
        img.d-block.w-100(src="/img/sliders3.webp" alt="Slide 3")
    button.carousel-control-prev(type="button" data-bs-target="#mySlider" data-bs-slide="prev")
      span.carousel-control-prev-icon(aria-hidden="true")
    button.carousel-control-next(type="button" data-bs-target="#mySlider" data-bs-slide="next")
      span.carousel-control-next-icon(aria-hidden="true")