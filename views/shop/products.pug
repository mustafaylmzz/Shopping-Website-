extends ../layout/main-layout.pug

include ../mixins/createProduct.pug

block content
    .row 
        .col-md-3 
            include ../includes/menu.pug
        
        .col-md-9
            
            .row.mt-2.g-3 
                if products.length > 0
                    each product in products
                        +createProduct(product)
                else    
                    h1.text-center No Products
